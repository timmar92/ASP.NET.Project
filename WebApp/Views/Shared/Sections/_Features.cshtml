
@inject FeatureService _featureService

@{
    var result = await _featureService.GetAllFeaturesAsync();
    List<FeatureEntity> content = (List<FeatureEntity>)result.ContentResult!;
    var feature = content.First();
}

@if (content != null) {
<section id="features" class="features">
    <div class="container">
        <h1>@feature.Title</h1>
        <p>@feature.Ingress</p>
        <div class="tool-features">

            @foreach (var item in feature.FeatureItems)
            {
                <div class="box">
                    <img src="/images/icons/@item.ImageUrl" alt="@item.Title">
                    <h5>@item.Title</h5>
                    <p>@item.Text</p>
                </div>
            }
        </div>
    </div>
</section>
}